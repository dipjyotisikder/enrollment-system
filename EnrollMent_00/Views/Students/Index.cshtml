            <td>
               <a href="@Url.Content(item.ImageUrl)"> <img src="@Url.Content(item.ImageUrl)" style="width:50px; height:50px; border-radius: 50%;" /> </a> 
            </td>
            @*PERFECT SYNTAX FOR IMAGE RENDERING*@


            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
